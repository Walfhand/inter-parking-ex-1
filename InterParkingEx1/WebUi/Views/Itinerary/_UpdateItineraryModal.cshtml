@using WebUi.Models
@model UpdateItineraryViewModel

<div class="modal fade" id="edit@(Model.UpdateItineraryCommand.Id)" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create new Itinerary</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-controller="Itinerary" asp-action="Update">
                <input type="hidden" asp-for="UpdateItineraryCommand.Id"/>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="UpdateItineraryCommand.Name" class="col-form-label"></label>
                        <input asp-for="UpdateItineraryCommand.Name" class="form-control">
                        <span asp-validation-for="UpdateItineraryCommand.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UpdateItineraryCommand.StartParkingId" class="col-form-label"></label>
                        <select asp-for="UpdateItineraryCommand.StartParkingId" asp-items="Model.Parkings" class="form-control"></select>
                        <span asp-validation-for="UpdateItineraryCommand.StartParkingId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UpdateItineraryCommand.EndParkingId" class="col-form-label"></label>
                        <select asp-for="UpdateItineraryCommand.EndParkingId" asp-items="Model.Parkings" class="form-control"></select>
                        <span asp-validation-for="UpdateItineraryCommand.EndParkingId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UpdateItineraryCommand.CarInformation.CarName" class="col-form-label"></label>
                        <input asp-for="UpdateItineraryCommand.CarInformation.CarName" class="form-control" />
                        <span asp-validation-for="UpdateItineraryCommand.CarInformation.CarName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdateItineraryCommand.CarInformation.ConsumptionPer100Km" class="col-form-label"></label>
                        <input asp-for="UpdateItineraryCommand.CarInformation.ConsumptionPer100Km" class="form-control" />
                        <span asp-validation-for="UpdateItineraryCommand.CarInformation.ConsumptionPer100Km" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdateItineraryCommand.CarInformation.EngineStartEffort" class="col-form-label"></label>
                        <input asp-for="UpdateItineraryCommand.CarInformation.EngineStartEffort" class="form-control" />
                        <span asp-validation-for="UpdateItineraryCommand.CarInformation.EngineStartEffort" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>