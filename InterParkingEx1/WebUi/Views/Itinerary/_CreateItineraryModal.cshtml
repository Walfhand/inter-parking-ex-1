@using Application.Itineraries.Commands.CreateItinerary
@using WebUi.Models
@model ItineraryViewModel

<div class="modal fade" id="create-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create new Itinerary</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="CreateItineraryCommand.Name" class="col-form-label"></label>
                        <input asp-for="CreateItineraryCommand.Name" class="form-control">
                        <span asp-validation-for="CreateItineraryCommand.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CreateItineraryCommand.StartParkingId" class="col-form-label"></label>
                        <select asp-for="CreateItineraryCommand.StartParkingId" asp-items="Model.Parkings" class="form-control"></select>
                        <span asp-validation-for="CreateItineraryCommand.StartParkingId" class="text-danger"></span>
                        @if (!Model.Parkings.Any())
                        {
                            <span class="text-danger">No existing parking, please create one beforehand <a class="text-danger" asp-controller="Parking" asp-action="Index">Here</a></span>
                        }
                    </div>

                    <div class="form-group">
                        <label asp-for="CreateItineraryCommand.EndParkingId" class="col-form-label"></label>
                        <select asp-for="CreateItineraryCommand.EndParkingId" asp-items="Model.Parkings" class="form-control"></select>
                        <span asp-validation-for="CreateItineraryCommand.EndParkingId" class="text-danger"></span>
                        @if (!Model.Parkings.Any())
                        {
                            <span class="text-danger">No existing parking, please create one beforehand <a class="text-danger" asp-controller="Parking" asp-action="Index">Here</a></span>
                        }
                    </div>

                    <div class="form-group">
                        <label asp-for="CreateItineraryCommand.CarInformation.CarName" class="col-form-label"></label>
                        <input asp-for="CreateItineraryCommand.CarInformation.CarName" class="form-control" />
                        <span asp-validation-for="CreateItineraryCommand.CarInformation.CarName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateItineraryCommand.CarInformation.ConsumptionPer100Km" class="col-form-label"></label>
                        <input asp-for="CreateItineraryCommand.CarInformation.ConsumptionPer100Km" class="form-control" />
                        <span asp-validation-for="CreateItineraryCommand.CarInformation.ConsumptionPer100Km" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateItineraryCommand.CarInformation.EngineStartEffort" class="col-form-label"></label>
                        <input asp-for="CreateItineraryCommand.CarInformation.EngineStartEffort" class="form-control" />
                        <span asp-validation-for="CreateItineraryCommand.CarInformation.EngineStartEffort" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>